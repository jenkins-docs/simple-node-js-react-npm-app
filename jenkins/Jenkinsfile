pipeline {
    // docker.withTool("docker")
    agent {
        kubernetes {
            //cloud 'kubernetes'
            label 'mypod'
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: node
    image: node:current
    command: ["cat"]
    tty: true
"""
        }
    }
    environment {
        CI = 'true'
    }
    container('node') { 
        stages {
            stage('Build') {
                steps {
                    container('node') {
                        sh 'npm install'
                    }
                }
            }
            stage('Test') {
                steps {
                    container('node') {
                        sh './jenkins/scripts/test.sh'
                    }
                }
            }
            stage('Deliver') {
                steps {
                    container('node') {
                        sh './jenkins/scripts/deliver.sh'
                        input message: 'Finished using the web site? (Click "Proceed" to continue)'
                        sh './jenkins/scripts/kill.sh'
                    }
                }
            }
        }
    }
}
